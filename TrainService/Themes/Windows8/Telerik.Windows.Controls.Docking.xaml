    <Style x:Key="DropDownButtonDropDownStyle" TargetType="telerik:RadDropDownButton">
        <Setter Property="Foreground" Value="{telerik:Windows8Resource ResourceKey=MainBrush}" />
        <Setter Property="Template" Value="{StaticResource DropDownButtonDropDownControlTemplate}" />

                    <VisualState x:Name="Pressed" />
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Path
                Fill="{TemplateBinding Foreground}"
                Stretch="None"
                StrokeThickness="0"
                Width="10"
                Height="8"
                Data="M4,2 C4,2 4,4 4,4 C4,4 8.2,4 9,4 L9,3 C9,2.3 8.3,2 7.5,2 z M3,0 L4,0 L4,1 L8,1 C9.1,1 10,1.8 10,3 L10,4 C10,5 9,6 8,6 L4,6 L4,7 L3,7 L3,4 L0,4 L0,3 L3,3 z" />
        </Grid>
    </ControlTemplate>
    <Style x:Key="RadButtonUnpinStyle" TargetType="telerik:RadButton">
        <Setter Property="Template" Value="{StaticResource RadButtonUnpinControlTemplate}" />
        <Setter Property="Foreground" Value="{telerik:Windows8Resource ResourceKey=MainBrush}" />
